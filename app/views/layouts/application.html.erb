<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded">
        <%= link_to "Instagram", root_path, class: 'navbar-brand' %>

        <% if current_user %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Novo Post", new_post_path, class: 'nav-link' %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item float-xs-right">
              <span class="navbar-text"><%= current_user.email %></span>
            </li>

            <li class="nav-item float-xs-right">
              <%= link_to "Sair", destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          </ul>
        <% end %>
      </nav>

      <div class="row">
        <div class="col-sm-12">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
